# Local Development
MONGO_URI=mongodb://localhost:27017/studycircle

# Production (MongoDB Atlas)
# MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster.xxxxx.mongodb.net/studycircle?retryWrites=true&w=majority

# JWT Secrets (generate secure random strings for production)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# Server Port
PORT=5000

# Environment (development or production)
NODE_ENV=development
